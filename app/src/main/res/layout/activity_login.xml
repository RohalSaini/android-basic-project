<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    tools:context=".LoginActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/labeled_registration"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:text="Login"
            android:layout_marginTop="80dp"
            android:layout_marginStart="@dimen/_40dp"
            android:layout_marginEnd="@dimen/_40dp"
            android:textSize="40sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/editext_emailAddress"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40dp"
            android:layout_below="@+id/labeled_registration"
            android:layout_marginStart="@dimen/_40dp"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_marginEnd="@dimen/_40dp"
            android:hint="Enter Email Address"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:padding="@dimen/_5dp"
            android:visibility="visible" />

        <EditText
            android:id="@+id/editext_passsword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/editext_emailAddress"
            android:layout_marginLeft="@dimen/_40dp"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_marginRight="@dimen/_40dp"
            android:hint="@string/enter_password"
            android:inputType="textPassword"
            android:paddingStart="@dimen/_5dp"
            android:paddingEnd="@dimen/_5dp"
            android:visibility="visible" />
        <Button
            android:layout_below="@+id/editext_passsword"
            android:visibility="visible"
            android:id="@+id/btn_login"
            android:text="Login"
            android:layout_marginTop="@dimen/_20dp"
            android:paddingStart="@dimen/_5dp"
            android:paddingEnd="@dimen/_5dp"
            android:layout_marginLeft="@dimen/_40dp"
            android:layout_marginRight="@dimen/_40dp"
            android:textSize="25sp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_20dp"
            android:paddingStart="@dimen/_5dp"
            android:paddingEnd="@dimen/_5dp"
            android:text="Or"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="visible" />
        <TextView
            android:layout_below="@+id/or"
            android:visibility="visible"
            android:text="Register Here !"
            android:id="@+id/register_here"
            android:layout_marginTop="@dimen/_20dp"
            android:paddingStart="@dimen/_5dp"
            android:paddingEnd="@dimen/_5dp"
            android:layout_marginLeft="@dimen/_40dp"
            android:layout_marginRight="@dimen/_40dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/register_here"
            android:layout_marginStart="140dp"
            android:layout_marginEnd="140dp"
            android:layout_marginBottom="@dimen/_20dp"
            android:background="@color/black" />
    </RelativeLayout>
</ScrollView>